@using EmptyWeb.Shared

@model PageEnums.AlertMessage

<div id="homeMessage" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thông Báo</h4>
            </div>
            <div class="modal-body text-center">

                @switch (Model)
                {
                    case PageEnums.AlertMessage.DangKyLamGiaSuThanhCong:
                        <h4>ĐĂNG KÝ THÀNH CÔNG</h4>
                        <p>Bạn đã đăng ký thành công hồ sơ Gia Sư tại giasu24h.hanoi.vn</p>
                        <p>Chúng tôi sẽ xét duyệt hồ sơ và liên hệ với bạn sớm nhất qua email hoặc số điện thoại</p>
                        break;
                    case PageEnums.AlertMessage.DangKyTimGiaSuThanhCong:
                        <h4>GỬI YÊU CẦU THÀNH CÔNG</h4>
                        <p>Chúng tôi sẽ xét duyệt yêu cầu và liên hệ với bạn sớm nhất qua email hoặc số điện thoại</p>
                        break;
                    case PageEnums.AlertMessage.DangKyLamGiaSuThatBai:
                        <h4>ĐĂNG KÝ THẤT BẠI</h4>
                        <p>Có lỗi xảy ra! Vui lòng thử lại sau hoặc liên hệ với chúng tôi để được xử lý nhanh nhất.</p>
                        break;
                    case PageEnums.AlertMessage.DangKyTimGiaSuThatBai:
                        <h4>GỬI YÊU CẦU THẤT BẠI</h4>
                        <p>Có lỗi xảy ra! Vui lòng thử lại sau hoặc liên hệ với chúng tôi để được xử lý nhanh nhất.</p>
                        break;
                    default: break;
                }

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-info center-block" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>