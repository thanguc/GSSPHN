@using EmptyWeb.Shared
@{
    PageEnums.AlertMessage? msg = (PageEnums.AlertMessage?)ViewBag.AlertMessage;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.css">
    @*<link rel="stylesheet" href="~/Content/bootstrap.yeti.css" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" />
    <link rel="stylesheet" href="~/Content/select2-bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-datetimepicker.css" />
    @*<link href="~/Content/kartik-v-bootstrap-fileinput-db72623/css/fileinput.min.css" media="all" rel="stylesheet" type="text/css" />*@
    <!-- Custom CSS -->
    <link href="~/Content/Site.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/font-awesome/css/font-awesome-animation.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Default Modernizr JS -->
    <script src="/Scripts/modernizr-2.6.2.js"></script>
    <script type="text/javascript">
        //<![CDATA[
        window.onload = function () {
            $(".end").nextAll().hide();
        }//]]>
    </script>
</head>
<body>
    <header id="header" class="navbar navbar-default topnav">
        <div class="container topnav">
            <a class="navbar-brand topnav" href="/" style="padding:0px;margin-top:8px;"><img src="https://uphinhnhanh.com/images/2017/03/28/logo.jpg" width="128" height="128" /></a>
            <div class="pull-right phone-call">
                <a href="tel:+84981494418">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle-thin fa-stack-2x faa-burst animated"></i>
                        <i class="fa fa-phone fa-stack-1x faa-ring animated fa-2x"></i>
                    </span>
                    0981 494 418
                </a>
            </div>

        </div>
    </header>
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top affix-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-left">
                    <li>@Html.ActionLink("GIỚI THIỆU", "About", "Home")</li>
                    @{
                        var mucs = PageHelper.GetAllMuc().Where(m => !m.IsHidden);
                        foreach (var muc in mucs)
                        {
                            var cms = muc.ChuyenMucs.Where(c => !c.IsHidden).ToList();
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@muc.TieuDe.ToUpper() <span class="caret"></span></a>
                                <ul class="dropdown-menu">

                                    @foreach (var cm in cms)
                                    {
                                        <li><a href="http://giasu24h.hanoi.vn/ChuyenMuc/@cm.Url">@cm.TieuDe.ToUpper()</a></li>
                                        if (cms.IndexOf(cm) != cms.Count - 1)
                                        {
                                            <li role="separator" class="divider"></li>
                                        }
                                    }
                                </ul>
                            </li>
                        }
                    }
                    @if (PageHelper.IsAuthenticated())
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@PageHelper.CurrentUserName() <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/QuanLy/"><i class="fa fa-user-circle fa-fw"></i> Quản lý</a></li>
                                <li role="separator" class="divider"></li>
                                <li>
                                    <a href="javascript:{}" onclick="$('.form-logout').submit();"><i class="fa fa-sign-out fa-fw"></i> Đăng xuất</a>
                                    <form action="/TaiKhoan/Logout" method="post" class="form-logout"></form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Thành viên <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/TrangChu/DangKyLamGiaSu"><i class="fa fa-user-plus fa-fw"></i> Đăng ký</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="/TaiKhoan/Login"><i class="fa fa-sign-in fa-fw"></i> Đăng nhập</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    @*<div class="container body-content">*@
    @RenderBody()
    @*</div>*@

    <!-- Footer -->
    <footer style="position:relative;top:50px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-inline">
                        <li>
                            <a href="#">Home</a>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <a href="#about">About</a>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <a href="#services">Services</a>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <a href="#contact">Contact</a>
                        </li>
                    </ul>
                    <p class="copyright text-muted small">Copyright &copy; Your Company 2014. All Rights Reserved</p>
                    <script src="https://www.w3counter.com/tracker.js?id=109384"></script>
                </div>
            </div>
        </div>
    </footer>

    @if (msg.HasValue)
    {
        @Html.Partial("_ThongBao", msg.Value)
    }

    <a class="back-to-top" style="display:none">
        <i class="fa fa-chevron-circle-up fa-4x"></i>
    </a>

    @*</div>*@

    <!-- jQuery -->
    <script src="~/Content/js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    @*<script src="~/Content/kartik-v-bootstrap-fileinput-db72623/js/plugins/canvas-to-blob.min.js"></script>
        <script src="~/Content/kartik-v-bootstrap-fileinput-db72623/js/fileinput.min.js"></script>*@
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Content/js/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/i18n/vi.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>

    <!-- Responsive -->
    <script src="/Scripts/respond.js"></script>

    <script src="~/Scripts/site.js"></script>
    <script src="~/Scripts/common.js"></script>

    @RenderSection("scripts", required: false)
    <div class="end"></div>
</body>
</html>