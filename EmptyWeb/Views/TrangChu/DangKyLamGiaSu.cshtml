@using EmptyWeb.Shared

@model EmptyWeb.Models.DangKyGiaSu

@{
    ViewBag.Title = "Đăng ký làm gia sư";
}
<style>
    legend {
        font-size: 2.4em;
    }

    input {
        background-color: transparent !important;
    }

    .select2-container--bootstrap .select2-selection {
        background-color: transparent !important;
    }

    #datetimepicker input {
        max-width: 138px;
    }

    #selectQueQuan, #selectGioiTinh, #selectTrinhDo, input[type=tel] {
        max-width: 175px;
    }

    input[type=text], input[type=email] {
        max-width: 400px;
    }

    /*input[name=Email], input[name=ChuyenNganh], input[name=DonVi], input[name=TrinhDoKhac] {
        max-width: 250px;
    }*/

    textarea {
        background-image: -webkit-linear-gradient(left, white 0px, transparent 0px), -webkit-linear-gradient(right, transparent 10px, transparent 10px), -webkit-linear-gradient(transparent 30px, #ccc 30px, #ccc 31px, white 31px);
        background-image: -moz-linear-gradient(left, white 0px, transparent 0px), -moz-linear-gradient(right, transparent 10px, transparent 10px), -moz-linear-gradient(transparent 30px, #ccc 30px, #ccc 31px, white 31px);
        background-image: -ms-linear-gradient(left, white 0px, transparent 0px), -ms-linear-gradient(right, transparent 10px, transparent 10px), -ms-linear-gradient(transparent 30px, #ccc 30px, #ccc 31px, white 31px);
        background-image: -o-linear-gradient(left, white 0px, transparent 0px), -o-linear-gradient(right, transparent 10px, transparent 10px), -o-linear-gradient(transparent 30px, #ccc 30px, #ccc 31px, white 31px);
        background-image: linear-gradient(left, white 10px, transparent 0px), linear-gradient(right, transparent 10px, transparent 10px), linear-gradient(transparent 30px, #ccc 30px, #ccc 31px, white 31px);
        background-size: 100% 100%, 100% 100%, 100% 31px;
        border: none;
        resize: none;
        line-height: 32px;
        max-width: 400px;
        width: 400px;
        background-color: transparent !important;
    }

        textarea:focus {
            outline: none;
        }

    .dk-content {
        height: 587px;
        overflow-y: auto;
        padding: 10px;
        text-align: justify;
    }

    .panel-heading {
        padding: 0;
        border: 0;
    }

    .panel-title > a, .panel-title > a:active {
        display: block;
        padding: 15px;
        color: #555;
        font-size: 16px;
        font-weight: bold;
        text-transform: uppercase;
        text-decoration: none;
    }

    .upload-anh-the {
        width: 152px;
        height: 227px;
        border: 1px dashed lightgray;
        position: absolute;
        right: 84px;
        top: 111px;
        background-image: url(/Content/img/no-image.png);
    }

        .upload-anh-the:not(.ready) > div {
            display: none;
        }

    .btnUpload {
        width: 175px;
        position: relative;
    }

    input[name=fileAnhThe] {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
    }

    .panel-body {
        background-color: #fafafa;
    }
</style>

<div class="container" style="padding-top: 100px;">
    <div class="row">
        <h3 class="text-center text-effect-blur">Đăng ký thông tin làm gia sư</h3>
        <div class="col-lg-12" style="padding-bottom:20px">
            <form class="form-horizontal form-dang-ky" action="/TrangChu/DangKyLamGiaSu" method="post" enctype="multipart/form-data">
                <div class="col-sm-12">
                    <hr />
                </div>
                <div class="col-lg-7">
                    <div class="panel panel-primary">
                        <div class="panel-heading" role="tab">
                            <h4 class="panel-title"><a style="color: #fff">Thông tin cá nhân <i class="glyphicon glyphicon-user pull-right"></i></a></h4>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="control-label col-md-3">Họ tên:</label>
                                <input type="text" name="HoTen" class="form-control" value="@Model.HoTen" />
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Ngày sinh:</label>
                                <div class='input-group date' id='datetimepicker'>
                                    <input type='text' class="form-control" name="NgaySinh" placeholder="dd/mm/yyyy" value="@Model.NgaySinh" style="z-index:0" />
                                    <span class="input-group-addon">
                                        <span class="fa fa-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Giới tính:</label>
                                <select name="GioiTinh" id="selectGioiTinh" class="form-control">
                                    <option></option>
                                    <option value="0" @(Model.GioiTinh.HasValue && Model.GioiTinh == PageEnums.GioiTinh.Male ? "selected" : string.Empty)>Nam</option>
                                    <option value="1" @(Model.GioiTinh.HasValue && Model.GioiTinh == PageEnums.GioiTinh.Female ? "selected" : string.Empty)>Nữ</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Quê quán:</label>
                                <select id="selectQueQuan" name="QueQuanID" class="form-control" value="@Model.QueQuanID">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Số điện thoại:</label>
                                <input name="SDT" type="tel" class="form-control" value="@Model.SDT" />
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Ảnh thẻ:</label>
                                <a class="btn btn-info btn-sm btnUpload">
                                    <span><i class="fa fa-upload fa-fw"></i> Tải ảnh lên</span>
                                    <input name="fileAnhThe" class="form-control" type="file" accept="image/*">
                                </a>
                                <div class="upload-anh-the"></div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Địa chỉ hiện tại:</label>
                                <input type="text" name="DiaChi" class="form-control" value="@Model.DiaChi" />
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Email:</label>
                                <input name="Email" type="email" class="form-control" value="@Model.Email" />
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Trình độ hiện tại:</label>
                                <select id="selectTrinhDo" name="TrinhDoID" class="form-control" value="@Model.TrinhDoID">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group hidden" id="trinhDoKhac">
                                <label class="control-label col-md-3"></label>
                                <input name="TrinhDoKhac" type="text" placeholder="Ví dụ: Cử nhân, Kỹ sư, Thạc sỹ,..." value="@Model.TrinhDoKhac" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Trường/Cơ quan:</label>
                                <input name="DonVi" type="text" placeholder="Nơi đang học tập, làm việc" class="form-control" value="@Model.DonVi" />
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Chuyên ngành:</label>
                                <input name="ChuyenNganh" type="text" placeholder="Chuyên ngành giảng dạy,theo học" value="@Model.ChuyenNganh" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Giới thiệu:</label>
                                <textarea name="GioiThieu" rows="3">@Model.GioiThieu</textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    @Html.Partial("_DieuKhoanDangKyGiaSu")
                </div>
                <div class="col-sm-12">
                    <hr />
                </div>
                <div class="col-sm-12">
                    <a class="btn btn-lg btn-success center-block btn-action-confirm" style="width: 150px"><i class="fa fa-user-plus fa-fw"></i> ĐĂNG KÝ</a>
                </div>
            </form>
        </div>
    </div>
    <hr />
    @Html.Partial("_ThongBao", PageEnums.AlertMessage.DangKyLamGiaSuThanhCong)
    @Html.Partial("_ThongBao", PageEnums.AlertMessage.DangKyLamGiaSuThatBai)
</div>
@section Scripts {
    <script src="~/Scripts/TrangChu/dangKyLamGiaSu.js"></script>
}