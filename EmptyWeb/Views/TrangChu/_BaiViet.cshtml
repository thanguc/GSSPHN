@using EmptyWeb.Shared
@model EmptyWeb.Models.BaiViet

@{
    var summary = "";
    if (!string.IsNullOrEmpty(Model.NoiDung))
    {
        summary = Model.NoiDung.Replace("<img", "<br").Replace("\n", "").Replace("\t", " ").Replace("</p><p>", " ").Replace("</li> <li>", " ");
    }
}
<div class="row-bv" onclick="location.href = '/TrangChu/BaiViet/@Model.UrlBaiViet'">
    <div class="row-bv--anh-bia @(Model.IsPinned && Model.SortNumber < 6 ? "hvr-shadow" : "hvr-forward hvr-icon-wobble-horizontal")">
        <img src="@Model.UrlAnhBia" class="@(Model.IsPinned && Model.SortNumber < 6 ? "hvr-grow" : string.Empty)"/>
        <div class="row-bv--tieu-de">
            <span>@Model.TieuDe</span>
        </div>
    </div>
</div>
