@using EmptyWeb.Shared
@model List<EmptyWeb.Models.DangKyGiaSu>
@{
    int stt = 1;
}
<style>
    .table-danh-sach-dang-ky tbody {
        display: block;
        height: calc(100vh - 350px);
        overflow: auto;
    }

        .table-danh-sach-dang-ky thead, .table-danh-sach-dang-ky tbody > tr {
            display: table;
            width: 100%;
            table-layout: fixed;
        }

    .table-danh-sach-dang-ky thead {
        width: calc(100% - 5px);
    }

    .table-danh-sach-dang-ky tbody > tr > td:first-of-type {
        width: 100px;
        text-align: center;
    }
</style>
<div class="col-md-12">
    <div class="panel panel-primary panel-table">
        <div class="panel-heading">
            <div class="row">
                <div class="col col-xs-6">
                    <h3 class="panel-title">Panel Heading</h3>
                </div>
                <div class="col col-xs-6 text-right">
                    <button type="button" class="btn btn-sm btn-success btn-create">Create New</button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-list table-danh-sach-dang-ky">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Họ Tên</th>
                        <th width="120">Ngày Sinh</th>
                        <th width="100">Giới Tính</th>
                        <th>Quê Quán</th>
                        <th>SĐT</th>
                        <th>Trình Độ</th>
                        <th class="text-center">Trạng Thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="clickable-row" data-target="#dklgs-@item.ID">
                            <td>@stt</td>
                            <td>@item.HoTen</td>
                            <td width="120">@item.NgaySinh</td>
                            <td width="100">@PageEnums.Parser.GioiTinh((int)item.GioiTinh)</td>
                            <td>@item.QueQuan.Ten</td>
                            <td>@item.SDT</td>
                            <td>@(item.TrinhDo.TenTrinhDo == "Khác" ? item.TrinhDoKhac : item.TrinhDo.TenTrinhDo)</td>
                            <td class="text-center">@Html.Raw(@PageEnums.Parser.TrangThaiDangKy(item.TrangThai))</td>
                        </tr>

                        stt++;
                    }
                </tbody>
            </table>

        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col col-xs-4">
                    Page 1 of 5
                </div>
                <div class="col col-xs-8">
                    <ul class="pagination hidden-xs pull-right">
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                    </ul>
                    <ul class="pagination visible-xs pull-right">
                        <li><a href="#">«</a></li>
                        <li><a href="#">»</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    <div id="dklgs-@item.ID" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@item.HoTen</h4>
                </div>
                <div class="modal-body">
                    <p>Some text in the modal.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
}

<script>
    $('tr.clickable-row')
        .on('click', function () {
            var $this = $(this);
            $($this.attr('data-target')).modal('show');
        });

</script>