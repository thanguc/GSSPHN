@using EmptyWeb.Shared
@model List<EmptyWeb.Models.DangKyGiaSu>
@{
    int stt = 0;
}
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Họ Tên</th>
            <th>Ngày Sinh</th>
            <th>Giới Tính</th>
            <th>Quê Quán</th>
            <th>SĐT</th>
            <th>Trình Độ</th>
            <th>Trạng Thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="clickable-row" data-target="#dklgs-@item.ID">
                <td>@stt</td>
                <td>@item.HoTen</td>
                <td>@item.NgaySinh</td>
                <td>@Parser.GioiTinh((int)item.GioiTinh)</td>
                <td>@item.QueQuan.Ten</td>
                <td>@item.SDT</td>
                <td>@(item.TrinhDo == 4 ? item.TrinhDoKhac : Parser.TrinhDo(item.TrinhDo))</td>
                <td>@item.TrangThai</td>
            </tr>

            stt++;
        }
    </tbody>
</table>

@foreach (var item in Model)
{
    <div id="dklgs-@item.ID" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@item.HoTen</h4>
                </div>
                <div class="modal-body">
                    <p>Some text in the modal.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
}

<script>
    $('tr.clickable-row').on('click', function () {
        var $this = $(this);
        console.log($this.attr('data-target'));
        $($this.attr('data-target')).modal('show');
    });
</script>