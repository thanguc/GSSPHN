@using EmptyWeb.Models
@model User
@{
}


<a class="pull-right btn btn-sm btn-primary btn-add-chuyen-muc" data-toggle="modal" data-target="#modal-tao-tai-khoan">
    Tạo tài khoản <i class="fa fa-plus fw"></i>
</a>
<div id="modal-tao-tai-khoan" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="float:left">
                    <span><i class="fa fa-plus-square"></i> Tạo tài khoản</span>
                </h4>
            </div>
            <form action="/TaiKhoan/Create" method="post" onkeypress="return event.keyCode != 13;">
                <div class="modal-body">
                    <div class="form-horizontal">
                        <input type="hidden" name="UserID" value="@Model.UserID" />
                        <div class="form-group">
                            <label class="control-label col-md-2">Username</label>
                            <input class="form-control" name="Username" type="text" style="max-width:350px; width:350px;" autocomplete="off" required />
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Password</label>
                            <input class="form-control" name="Password" type="password" style="max-width:350px; width:350px;" autocomplete="off" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success btn-action-confirm">Tạo</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                </div>
            </form>
        </div>

    </div>
</div>